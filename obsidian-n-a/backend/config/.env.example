# Backend Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["http://localhost:3000", "app://obsidian.md"]

# Database
DATABASE_URL=sqlite:///./obsidian_ai.db
REDIS_URL=redis://localhost:6379/0

# AI Model Configuration
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_PROVIDER=openai
MAX_CONTEXT_LENGTH=100000
EMBEDDING_CACHE_TTL=3600

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Google AI
GOOGLE_API_KEY=your-google-api-key
GOOGLE_MODEL=gemini-pro

# Notion Integration
NOTION_API_KEY=your-notion-integration-token
NOTION_DATABASE_ID=your-notion-database-id

# Airtable Integration
AIRTABLE_API_KEY=your-airtable-personal-access-token
AIRTABLE_BASE_ID=your-airtable-base-id
AIRTABLE_TABLE_NAME=your-table-name

# Google Drive Integration
GOOGLE_DRIVE_CREDENTIALS_FILE=path/to/credentials.json
GOOGLE_DRIVE_TOKEN_FILE=path/to/token.json

# Dropbox Integration
DROPBOX_ACCESS_TOKEN=your-dropbox-access-token
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret

# OneDrive Integration
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret

# Performance Settings
MAX_WORKERS=4
BATCH_SIZE=32
CACHE_SIZE=1000
MEMORY_LIMIT_MB=2048

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/obsidian_ai.log
LOG_ROTATION=1 week
LOG_RETENTION=4 weeks

# Feature Flags
ENABLE_INCREMENTAL_EMBEDDING=True
ENABLE_SMART_CACHING=True
ENABLE_HYBRID_PROCESSING=True
ENABLE_CLOUD_SYNC=True
ENABLE_ANALYTICS=True

