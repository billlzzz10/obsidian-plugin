# Production .env example for Azure deployment
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production

# Security
SECRET_KEY=your-production-secret-key
CORS_ORIGINS=["https://your-obsidian-app.com", "app://obsidian.md"]

# Database
DATABASE_URL=sqlite:///./obsidian_ai.db  # Or use Azure SQL/CosmosDB connection string
REDIS_URL=redis://<your-azure-redis>:6379/0

# AI Model Configuration
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_PROVIDER=azure
MAX_CONTEXT_LENGTH=100000
EMBEDDING_CACHE_TTL=3600

# Azure OpenAI
OPENAI_API_KEY=your-azure-openai-key
OPENAI_API_BASE=https://<your-azure-openai-endpoint>.openai.azure.com/
OPENAI_MODEL=gpt-4
AZURE_REGION=<your-azure-region>
AZURE_DEPLOYMENT_NAME=<your-azure-deployment-name>

# Azure Cognitive Search
AZURE_SEARCH_API_KEY=your-azure-search-key
AZURE_SEARCH_ENDPOINT=https://<your-azure-search-endpoint>.search.windows.net
AZURE_SEARCH_INDEX=your-index-name
AZURE_SEARCH_API_VERSION=2023-07-01-Preview

# Azure CosmosDB
AZURE_COSMOSDB_ENDPOINT=https://<your-cosmosdb-account>.documents.azure.com:443/
AZURE_COSMOSDB_KEY=your-cosmosdb-key
AZURE_COSMOSDB_DATABASE=your-db
AZURE_COSMOSDB_CONTAINER=your-container

# Notion, Airtable, Figma, Zapier, MCP, etc. (add as needed)
