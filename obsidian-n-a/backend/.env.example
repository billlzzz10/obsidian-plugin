# Example .env file for local development
HOST=localhost
PORT=8000
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-secret-key-here
CORS_ORIGINS=["app://obsidian.md", "capacitor://localhost", "http://localhost"]

# Database - Local SQLite (for development)
DATABASE_URL=sqlite:///./sql_app.db

# AI Model Configuration
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_PROVIDER=openai
MAX_CONTEXT_LENGTH=100000
EMBEDDING_CACHE_TTL=3600

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Azure OpenAI (if using Azure)
OPENAI_API_BASE=https://your-azure-openai-resource.openai.azure.com/
AZURE_REGION=eastus
AZURE_DEPLOYMENT_NAME=your-deployment-name

# Vector Store
VECTOR_STORE_PATH=./data/vector_store

# API Security
API_KEY_HEADER_NAME=X-API-Key
API_KEY=your-api-key-for-plugin

# Plugin Integration
USE_PLUGIN_SETTINGS=true

# Azure SQL Database (for production)
# DATABASE_URL=mssql+pyodbc://username:password@servername.database.windows.net:1433/dbname?driver=ODBC+Driver+18+for+SQL+Server&encrypt=yes&trustservercertificate=no&connection+timeout=30
