# Production .env example for Azure deployment
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production

# Security
# SECRET_KEY should be set securely via environment variable or Azure Key Vault
SECRET_KEY=${SECRET_KEY}
CORS_ORIGINS=["app://obsidian.md", "capacitor://localhost", "http://localhost"]

# Database - Azure SQL Database
DATABASE_URL=mssql+pyodbc://$(DB_USERNAME):$(DB_PASSWORD)@billlzzz.database.windows.net:1433/billlzzz-1?driver=ODBC+Driver+18+for+SQL+Server&encrypt=yes&trustservercertificate=no&connection+timeout=30
DB_USERNAME=
DB_PASSWORD=

# AI Model Configuration
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_PROVIDER=azure
MAX_CONTEXT_LENGTH=100000
EMBEDDING_CACHE_TTL=3600

# Azure OpenAI - จะถูกแทนที่ด้วยค่าที่ผู้ใช้ใส่ในหน้า Settings
OPENAI_API_KEY=""
OPENAI_API_BASE=""
OPENAI_MODEL=gpt-4
AZURE_REGION=eastus
AZURE_DEPLOYMENT_NAME=""

# Vector Store
VECTOR_STORE_PATH=/app/data/vector_store

# API Security - ให้ผู้ใช้กำหนดใน Settings
API_KEY_HEADER_NAME=X-API-Key
API_KEY=""

# สามารถอ่านค่า API key จากการตั้งค่าของ plugin ได้
USE_PLUGIN_SETTINGS=true
