# Production environment configuration for Azure deployment
HOST=0.0.0.0
PORT=8000
DEBUG=False
ENVIRONMENT=production
LOG_LEVEL=INFO
LOG_FILE=/tmp/obsidian-backend.log
LOG_ROTATION=10 MB
LOG_RETENTION=10 days
MAX_WORKERS=4

# Security - will be set via Azure App Settings or Key Vault
SECRET_KEY=your-secret-key-will-be-set-by-azure
CORS_ORIGINS=["app://obsidian.md", "capacitor://localhost", "http://localhost", "https://localhost"]

# Database - will be configured automatically by Bicep template
# For SQLite fallback in case SQL Server is not available
DATABASE_URL=sqlite:///tmp/sqlite.db

# AI Model Configuration
DEFAULT_EMBEDDING_MODEL=all-MiniLM-L6-v2
DEFAULT_LLM_PROVIDER=openai
MAX_CONTEXT_LENGTH=100000
EMBEDDING_CACHE_TTL=3600

# OpenAI Configuration - to be set by users in plugin settings
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_API_BASE=

# Azure OpenAI Configuration - to be set by users in plugin settings  
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_DEPLOYMENT_NAME=gpt-4
AZURE_REGION=eastus

# Vector Store Configuration
VECTOR_STORE_PATH=/tmp/vector_store
VECTOR_STORE_TYPE=chromadb

# API Security - to be set by users in plugin settings
API_KEY_HEADER_NAME=X-API-Key
API_KEY=your-api-key-set-by-user

# Plugin Integration
USE_PLUGIN_SETTINGS=true
ALLOW_CORS_ALL_ORIGINS=false

# Cache Configuration
REDIS_URL=
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Feature Flags
ENABLE_TELEMETRY=true
ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
